{
	"manifest_version": 2,

	"name": "Uphold Bitcoin Ticker - Opera Extensions",
	"description": "Extension for getting the price of Bitcoin/USD at Uphold.com",
	"version": "1.0",
	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"webRequest",
		"https://api.uphold.com/v0/ticker/BTC"],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Go to Dev.Opera!"
	},
	"developer": {
		"name": "Ernane Luis P. Aguiar",
		"url": "https://github.com/ernaneluis"
	 }
}
